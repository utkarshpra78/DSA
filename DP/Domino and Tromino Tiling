//https://leetcode.com/problems/domino-and-tromino-tiling/description/

//790. Domino and Tromino Tiling

class Solution {
public:
    const int N=1e9+7;
    int numTilings(int n) {
        vector<int>dp(n+4,0);
        dp[1]=1;
        dp[2]=2;
        dp[3]=5;
        for(int i=4;i<=n;i++){
            (dp[i]=((2*dp[i-1])%N+(dp[i-3])%N)%N)%N;
        }
        return dp[n]%N;
    }
};
